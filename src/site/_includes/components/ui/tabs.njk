{# 
  Component: Tabs
  Usage: {% include "components/ui/tabs.njk" with {tabs: [{id: "tab1", label: "Tab 1", content: "Content 1"}, ...]} %}
#}
<div class="tabs-container" x-data="{ activeTab: '{{ tabs[0].id }}' }">
    <div class="tabs-header">
        {% for tab in tabs %}
        <button 
            class="tab-button" 
            :class="{ 'active': activeTab === '{{ tab.id }}' }"
            @click="activeTab = '{{ tab.id }}'"
            role="tab"
            aria-selected="false"
            :aria-selected="activeTab === '{{ tab.id }}'">
            {{ tab.label }}
        </button>
        {% endfor %}
    </div>
    <div class="tabs-content">
        {% for tab in tabs %}
        <div 
            class="tab-panel" 
            x-show="activeTab === '{{ tab.id }}'"
            role="tabpanel"
            style="display: none;">
            {{ tab.content | safe }}
        </div>
        {% endfor %}
    </div>
</div>

