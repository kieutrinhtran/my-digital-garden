{# 
  Component: Navigation
  Description: Next/Previous navigation buttons at the end of article
#}
<nav class="article-navigation">
    <div class="article-navigation-container">
        {% if navigation.previous %}
        <a href="{{ navigation.previous.permalink }}" class="nav-button nav-button-previous">
            <div class="nav-button-icon">
                <i icon-name="chevron-left"></i>
            </div>
            <div class="nav-button-content">
                <span class="nav-button-label">Bài trước</span>
                <span class="nav-button-title">{{ navigation.previous.name }}</span>
            </div>
        </a>
        {% else %}
        <div class="nav-button nav-button-disabled">
            <div class="nav-button-icon">
                <i icon-name="chevron-left"></i>
            </div>
            <div class="nav-button-content">
                <span class="nav-button-label">Bài trước</span>
                <span class="nav-button-title">Không có</span>
            </div>
        </div>
        {% endif %}
        
        {% if navigation.next %}
        <a href="{{ navigation.next.permalink }}" class="nav-button nav-button-next">
            <div class="nav-button-content">
                <span class="nav-button-label">Bài tiếp theo</span>
                <span class="nav-button-title">{{ navigation.next.name }}</span>
            </div>
            <div class="nav-button-icon">
                <i icon-name="chevron-right"></i>
            </div>
        </a>
        {% else %}
        <div class="nav-button nav-button-disabled">
            <div class="nav-button-content">
                <span class="nav-button-label">Bài tiếp theo</span>
                <span class="nav-button-title">Không có</span>
            </div>
            <div class="nav-button-icon">
                <i icon-name="chevron-right"></i>
            </div>
        </div>
        {% endif %}
    </div>
    
    {# View Counter #}
    <div class="view-counter" data-page-url="{{ permalink }}">
        <i icon-name="eye"></i>
        <span class="view-counter-label">Lượt xem:</span>
        <span class="view-counter-number" id="view-count-{{ page.fileSlug }}">0</span>
    </div>
</nav>

